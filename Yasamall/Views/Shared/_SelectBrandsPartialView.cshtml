@model IEnumerable<BrandTags>

@foreach (var b in Model)
{
<div class="col-12 col-sm-6 col-md-4 col-lg-3" data-aos="zoom-in">
    @if (b.Brand.CategoryId == 1)
    {
        <a asp-controller="Shop" asp-action="ShopDetails" asp-route-id="@b.Brand.Id">
            <div class="store-content">
                <div class="content-image">
                    <img src="img/@b.Brand.PhotoURL" alt="">
                </div>
                <div class="content-info">
                    <h4>@b.Brand.Name</h4>
                    <p>@b.Brand.Floor.Name  mərtəbə</p>
                    <p>@b.Brand.Phone</p>
                </div>
            </div>
        </a>
    }
    else if (b.Brand.CategoryId == 2)
    {
        <a asp-controller="Restaurant" asp-action="RestaurantDetails" asp-route-id="@b.Brand.Id">
            <div class="store-content">
                <div class="content-image">
                    <img src="img/@b.Brand.PhotoURL" alt="">
                </div>
                <div class="content-info">
                    <h4>@b.Brand.Name</h4>
                    <p>@b.Brand.Floor.Name  mərtəbə</p>
                    <p>@b.Brand.Phone</p>
                </div>
            </div>
        </a>
    }
    else if (b.Brand.CategoryId == 3)
    {
        <a asp-controller="Entertainment" asp-action="Details" asp-route-id="@b.Brand.Id">
            <div class="store-content">
                <div class="content-image">
                    <img src="img/@b.Brand.PhotoURL" alt="">
                </div>
                <div class="content-info">
                    <h4>@b.Brand.Name</h4>
                    <p>@b.Brand.Floor.Name  mərtəbə</p>
                    <p>@b.Brand.Phone</p>
                </div>
            </div>
        </a>
    }
</div>
}