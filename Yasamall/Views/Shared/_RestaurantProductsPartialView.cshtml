
@{
    @model ProTags
    Layout = null;
}

@foreach (var p in Model.Products)
{
    <div class="col-12 col-sm-6 col-md-4 col-lg-3" data-aos="zoom-in">
        <div class="product-restaurant-content">
            <div class="product-restaurant-image">
                <img src="~/img/@p.Photos.FirstOrDefault(pr => pr.IsMain == true).PhotoURL" alt="">
            </div>
            <div class="product-restaurant-info">
                <h5>@p.Name</h5>
                <p>$@p.Price</p>
            </div>
            @if(User.Identity.Name == Model.User.UserName)
            {
                <div class="edit-products-admin">
                    <a asp-controller="Restaurant" asp-action="ProductEdit" asp-route-id="@p.Id" title="Dəyiş"><i class="fal fa-edit edit-product-icon"></i></a>
                    <a asp-controller="Restaurant" asp-action="Delete" asp-route-id="@p.Id"title="Sil"><i class="fal fa-trash delete-product-icon"></i></a>
                </div>
            }
        </div>
    </div>
}