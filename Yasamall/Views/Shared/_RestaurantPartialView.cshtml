
@{
    @model IEnumerable<Brands>
    Layout = null;
}

@foreach (var b in Model)
{
    <div class="col-12 col-sm-6 col-md-4 col-lg-3" data-aos="zoom-in">
        <a asp-controller="Restaurant" asp-action="RestaurantDetails" asp-route-id="@b.Id">
            <div class="restaurant-content">
                <div class="content-image">
                    <img src="img/@b.PhotoURL" alt="">
                </div>
                <div class="content-info">
                    <h4>@b.Name</h4>
                    <p>@b.Floor.Name  mərtəbə</p>
                    <p>@b.Phone</p>
                </div>
            </div>
        </a>
    </div>
}