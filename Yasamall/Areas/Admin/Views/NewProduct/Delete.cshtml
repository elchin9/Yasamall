
@{
    @model NewProducts
    ViewData["Title"] = "Delete";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12  col-md-6">
                        <img style="height: 400px;object-fit:cover;" class="img-thumbnail" src="~/img/@Model.Product.Photos.FirstOrDefault(p => p.IsMain == true).PhotoURL" />
                        <h4 class="mt-3">@Model.Product.Name </h4>
                    </div>
                    <form method="post" class="col-12 col-md-6">
                        <div class="alert alert-danger mt-4">
                            <p style="padding-top: 0;"><b>Bu reklamı silmək istədiyinizə əminsiniz ?</b></p>
                        </div>
                        <input type="submit" class="btn btn-danger btn-block btn-lg" value="Delete" />
                    </form>

                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <a class="btn btn-primary mt-5 " asp-action="Index">Back To Home Page</a>
                </div>
            </div>
        </div>
    </div>
</div>
