
@{
    @model NewProducts
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Yeni Məhsul Yarat</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-8">
                        <form method="post" class="mt-4" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="ProductsId">Kateqoriya</label>
                                <select asp-for="ProductsId" asp-items="@(new SelectList(ViewBag.Product,"Id","Name"))" style="width:100%; padding: 10px;"></select>
                                <span asp-validation-for="ProductsId" class="text-danger"></span>
                            </div>

                            <input type="submit" class="btn-create" value="Yarat" />
                        </form>
                    </div>
                    <div class="col-12 col-md-4"></div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}