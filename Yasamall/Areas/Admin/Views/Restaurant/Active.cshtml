
@{
    @model Brands
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12  col-md-6">
                        <img style="height: 400px;object-fit:cover;" class="img-thumbnail" src="~/img/@Model.PhotoURL" />
                        <h4 class="mt-3">@Model.Name </h4>
                    </div>
                    <form method="post" class="col-12 col-md-6">
                        <div class="alert alert-success mt-4">
                            <p style="padding-top: 0;"><b>Bu brandi yenidən aktivləşdirmək istəyirsiniz mi ?</b></p>
                        </div>
                        <input type="submit" class="btn btn-success btn-block btn-lg" value="Aktivləşdir" />
                    </form>

                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <a class="btn btn-primary mt-5 " asp-action="Index">Back To Home Page</a>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}