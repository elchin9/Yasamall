
@{
    @model AppUser  
    ViewData["Title"] = "Edit";
}


<!-- Start Contact Section -->

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>İstifadəçinin profilinə düzəliş et</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-8">
                        <form method="post" class="mt-4" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="Photo">İstifadəçinin Şəklini dəyişin</label>
                                <div class="uploadArea">
                                    <div class="uploadImage d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input id="uploadInput" asp-for="Photo" accept="image/*" class="form-control" />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Firstname">Ad</label>
                                <input asp-for="Firstname" class="form-control" />
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Lastname">Soyad</label>
                                <input asp-for="Lastname" class="form-control" />
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="UserName">Username</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber">Telefon</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div> 

                            <input type="submit" class="btn-create" value="Dəyiş" />
                        </form>
                    </div>
                    <div class="col-12 col-md-4 mt-3">
                        <div>
                            <p>Hazırki şəkil</p>
                        </div>
                        @if (Model.PhotoURL == null)
                        {
                            <div>
                                <img style="width:100%;" src="~/img/Person-icon.png" />
                            </div>
                        }
                        else
                        {
                            <div>
                                <img style="width:100%;" src="~/img/@Model.PhotoURL" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- End Contact Section -->


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}




