
@{
    @model ProColors
    ViewData["Title"] = "Edit";
}


<!-- Start Contact Section -->

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Restoranda düzəliş edin</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-8">
                        <form method="post" class="mt-4" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="AllPhotos">Restoranın şəklini dəyişin</label>
                                <div class="uploadArea">
                                    <div class="uploadImage d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input id="uploadInput" asp-for="AllPhotos" accept="image/*" class="form-control" />
                                <span asp-validation-for="AllPhotos" class="text-danger"></span>
                            </div>



                            <div class="form-group">
                                <label asp-for="Name">Ad</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ColorsId">Kateqoriya</label>
                                <select asp-for="ColorsId" asp-items="@(new SelectList(ViewBag.Color,"Id","Color"))" multiple style="width:100%; padding: 10px;"></select>
                                <span asp-validation-for="ColorsId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SizesId">Kateqoriya</label>
                                <select asp-for="SizesId" asp-items="@(new SelectList(ViewBag.Size,"Id","Size"))" multiple style="width:100%; padding: 10px;"></select>
                                <span asp-validation-for="SizesId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Info">Haqqında</label>
                                <input asp-for="Info" class="form-control" />
                                <span asp-validation-for="Info" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price">Qiymət</label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>


                            <input type="submit" class="btn-create" value="Dəyiş" />
                        </form>
                    </div>
                    <div class="col-12 col-md-4">
                        <div>
                            <p>Hazırki şəkil</p>
                        </div>
                        <div>
                            <img style="width:100%;" src="~/img/@Model.Photos.FirstOrDefault(p => p.IsMain == true).PhotoURL" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- End Contact Section -->


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}




