
@{
    @model Brands
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Əyləncə Mərkəzi Yarat</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="wrapper mt-5">
                        <div class="tab-header">
                            <ul class="tabs">
                                <li data-index="1">Məhsullu</li>
                                <li data-index="2">Tək Səhifəlik</li>
                            </ul>
                        </div>
                        <div class="tab-body">
                            <div data-index="1" class="tab_content ">
                                <div class="col-12 col-md-2"></div>
                                <div class="col-12 col-md-8">
                                    <p>Hal hazırda Məhsullu bir Brand yaradırsınız.</p>
                                    <form asp-action="Create" method="post" class="mt-4" enctype="multipart/form-data">

                                        <div class="form-group">
                                            <label asp-for="Photo">Brandin Şəklini seçin</label>
                                            <div class="uploadArea">
                                                <div class="uploadImage d-flex justify-content-center align-items-center">
                                                    <i class="fal fa-cloud-upload"></i>
                                                </div>
                                            </div>
                                            <input class="uploadInput form-control" asp-for="Photo" accept="image/*" />
                                            <span asp-validation-for="Photo" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Name">Ad</label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="FloorId">Mərtəbə</label>
                                            <select asp-for="FloorId" style="width:100%;padding:10px 20px;" asp-items="@(new SelectList(ViewBag.Floor, "Id", "Name"))"></select>
                                            <span asp-validation-for="FloorId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="UserId">Səhifə Admini</label>
                                            <select asp-for="UserId" style="width:100%;padding:10px 20px;" asp-items="@(new SelectList(ViewBag.User, "Id", "UserName"))"></select>
                                            <span asp-validation-for="UserId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="TagsId">Kateqoriya</label>
                                            <select asp-for="TagsId" asp-items="@(new SelectList(ViewBag.Tag,"Id","Name"))" multiple style="width:100%; padding: 10px;"></select>
                                            <span asp-validation-for="TagsId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Phone">Nömrə</label>
                                            <input asp-for="Phone" class="form-control" />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="FacebookLink">Facebook Ünvanı</label>
                                            <input asp-for="FacebookLink" class="form-control" />
                                            <span asp-validation-for="FacebookLink" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="InstagramLink">İnstagram Ünvanı</label>
                                            <input asp-for="InstagramLink" class="form-control" />
                                            <span asp-validation-for="InstagramLink" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Website">Web Sayt</label>
                                            <input asp-for="Website" class="form-control" />
                                            <span asp-validation-for="Website" class="text-danger"></span>
                                        </div>


                                        <div class="form-group">
                                            <div class="loginCheckBox">
                                                <p>Brendiniz Cinema olacaqsa işarələyin.</p>
                                                <label asp-for="IsFilm">
                                                    <input asp-for="IsFilm" />
                                                    <span class="checkmarkTwo"></span>
                                                </label>
                                            </div>
                                        </div>

                                        <input type="submit" class="btn-create" value="Yarat" />
                                    </form>
                                </div>
                                <div class="col-12 col-md-2"></div>
                            </div>
                            <div data-index="2" class="tab_content">
                                <p>Hal hazırda tək səhifəlik bir Brand yaradırsınız.</p>
                                <div class="col-12 col-md-2"></div>
                                <div class="col-12 col-md-8">
                                    <form asp-action="CreateOnePage" method="post" class="mt-4" enctype="multipart/form-data">

                                        <div class="form-group">
                                            <label asp-for="Photo">Brandin Şəklini seçin</label>
                                            <div class="uploadArea">
                                                <div class="uploadImageSecond d-flex justify-content-center align-items-center">
                                                    <i class="fal fa-cloud-upload"></i>
                                                </div>
                                            </div>
                                            <input class="uploadInputSecond form-control" asp-for="Photo" accept="image/*" />
                                            <span asp-validation-for="Photo" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="OnePagePhoto">Məlumat Şəklini seçin</label>
                                            <div class="uploadArea">
                                                <div class="uploadImageThird d-flex justify-content-center align-items-center">
                                                    <i class="fal fa-cloud-upload"></i>
                                                </div>
                                            </div>
                                            <input class="uploadInputThird form-control" asp-for="OnePagePhoto" accept="image/*" />
                                            <span asp-validation-for="OnePagePhoto" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Name">Addfsdfs</label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="OnePageInfo">Haqqında</label>
                                            <input asp-for="OnePageInfo" class="form-control" />
                                            <span asp-validation-for="OnePageInfo" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="FloorId">Mərtəbə</label>
                                            <select asp-for="FloorId" style="width:100%;padding:10px 20px;" asp-items="@(new SelectList(ViewBag.Floor, "Id", "Name"))"></select>
                                            <span asp-validation-for="FloorId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="UserId">Səhifə Admini</label>
                                            <select asp-for="UserId" style="width:100%;padding:10px 20px;" asp-items="@(new SelectList(ViewBag.User, "Id", "UserName"))"></select>
                                            <span asp-validation-for="UserId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="TagsId">Kateqoriya</label>
                                            <select asp-for="TagsId" asp-items="@(new SelectList(ViewBag.Tag,"Id","Name"))" multiple style="width:100%; padding: 10px;"></select>
                                            <span asp-validation-for="TagsId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Phone">Nömrə</label>
                                            <input asp-for="Phone" class="form-control" />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="FacebookLink">Facebook Ünvanı</label>
                                            <input asp-for="FacebookLink" class="form-control" />
                                            <span asp-validation-for="FacebookLink" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="InstagramLink">İnstagram Ünvanı</label>
                                            <input asp-for="InstagramLink" class="form-control" />
                                            <span asp-validation-for="InstagramLink" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Website">Web Sayt</label>
                                            <input asp-for="Website" class="form-control" />
                                            <span asp-validation-for="Website" class="text-danger"></span>
                                        </div>

                                        <input type="submit" class="btn-create" value="Yarat" />
                                    </form>
                                </div>
                                <div class="col-12 col-md-2"></div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>

    </div>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}