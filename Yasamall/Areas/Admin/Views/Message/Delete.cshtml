
@{
    @model MailBox
    ViewData["Title"] = "Delete";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12  col-md-6">
                        <h4 class="mt-3">Ad / Soyad : @Model.Firstname  @Model.Lastname</h4>
                        <h4 class="mt-3">Email : @Model.Email </h4>
                        <h5 class="mt-3">Mesaj : <p class="mt-2">@Model.TextBody</p></h5>
                        <h6 class="mt-3">Göndərildiyi vaxt : @String.Format("{0:yyyy-MM-dd}", Model.Time) </h6>

                    </div>
                    <form method="post" class="col-12 col-md-6">
                        <div class="alert alert-danger mt-4">
                            <p style="padding-top: 0;"><b>Bu mesajı silmək istədiyinizə əminsiniz ?</b></p>
                        </div>
                        <input type="submit" class="btn btn-danger btn-block btn-lg" value="Delete" />
                    </form>

                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <a class="btn btn-primary mt-5 " asp-action="Index">Back To Home Page</a>
                </div>
            </div>
        </div>
    </div>
</div>