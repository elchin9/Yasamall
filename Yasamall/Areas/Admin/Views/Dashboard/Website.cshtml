
@{
    ViewData["Title"] = "Website";
}

<!-- MAIN CONTENT-->

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Menu</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Contact" asp-action="Index">
                                <i class="fal fa-address-card"></i>
                                <p>Əlaqə</p>
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-4">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Message" asp-action="Index">
                                <i class="fal fa-comments-alt"></i>
                                <p>İsmarıclar</p>
                            </a>
                        </div>

                    </div>
                    <div class="col-12 col-md-6 col-lg-4">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="NewProduct" asp-action="Index">
                                <i class="fal fa-file-plus"></i>
                                <p>Yeni Məhsullar</p>
                            </a>
                        </div>

                    </div>
                    <div class="col-12 col-md-6 col-lg-4">

                        <div class="menu-icon-admin text-center">
                            <a asp-controller="Dashboard" asp-action="ImageIndex">
                                <i class="fal fa-image-polaroid"></i>
                                <p>Arxa Fon Şəkilləri</p>
                            </a>
                        </div>

                    </div>
                </div>
            </div>



        </div>
    </div>
</div>
<!-- END MAIN CONTENT-->
