
@{
    @model BackgroundImages

    ViewData["Title"] = "Contact";
}


<!-- Start Contact Section -->

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3>Arxa fon şəkillərini dəyiş</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-8">
                        <form method="post" class="mt-4" enctype="multipart/form-data">

                            <div class="form-group">
                                <label asp-for="PhotoOne">Birinci şəkil üçün </label>
                                <div class="uploadArea">
                                    <div class="uploadImage d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input  asp-for="PhotoOne" accept="image/*" class="form-control uploadInput" />
                                <span asp-validation-for="PhotoOne" class="text-danger"></span>
                            </div>

                            <div class="form-group">

                                <label asp-for="PhotoTwo">İkinci şəkil üçün</label>
                                <div class="uploadArea">
                                    <div class="uploadImageSecond d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input  asp-for="PhotoTwo" accept="image/*" class="form-control uploadInputSecond" />
                                <span asp-validation-for="PhotoTwo" class="text-danger"></span>
                            </div>

                            <div class="form-group">

                                <label asp-for="PhotoThree">Üçüncü şəkil üçün</label>
                                <div class="uploadArea">
                                    <div class="uploadImageThird d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input  asp-for="PhotoThree" accept="image/*" class="form-control uploadInputThird" />
                                <span asp-validation-for="PhotoThree" class="text-danger"></span>
                            </div>

                            <div class="form-group">

                                <label asp-for="PhotoFour">Dördüncü şəkil üçün</label>
                                <div class="uploadArea">
                                    <div class="uploadImageFour d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input asp-for="PhotoFour" accept="image/*" class="form-control uploadInputFour" />
                                <span asp-validation-for="PhotoFour" class="text-danger"></span>
                            </div>

                            <div class="form-group">

                                <label asp-for="PhotoFive">Beşinci şəkil üçün</label>
                                <div class="uploadArea">
                                    <div class="uploadImageFive d-flex justify-content-center align-items-center">
                                        <i class="fal fa-cloud-upload"></i>
                                    </div>
                                </div>
                                <input  asp-for="PhotoFive" accept="image/*" class="form-control uploadInputFive" />
                                <span asp-validation-for="PhotoFive" class="text-danger"></span>
                            </div>

                            <input type="submit" class="btn-create" value="Dəyiş" />
                        </form>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="edit-image-admin-panel">
                            <h5>Birinci şəkil üçün</h5>
                            <img src="~/img/@Model.PhotoURLOne" />
                        </div>
                        <div class="edit-image-admin-panel">
                            <h5>İkinci şəkil üçün</"></h5>

                            <img src="~/img/@Model.PhotoURLTwo" />
                        </div>
                        <div class="edit-image-admin-panel">
                            <h5>Üçüncü şəkil üçün</h5>

                            <img src="~/img/@Model.PhotoURLThree" />
                        </div>
                        <div class="edit-image-admin-panel">
                            <h5>Dördüncü şəkil üçün</h5>

                            <img src="~/img/@Model.PhotoURLFour" />
                        </div>
                        <div class="edit-image-admin-panel">
                            <h5>Beşinci şəkil üçün</h5>

                            <img src="~/img/@Model.PhotoURLFive" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- End Contact Section -->


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



